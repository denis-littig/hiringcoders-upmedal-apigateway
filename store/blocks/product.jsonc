{
  "store.product": {
    "children": ["flex-layout.row#main"]
  },
  "flex-layout.row#main": {
    "props": {
      "marginTop": 6
    },
    "children": ["flex-layout.col#leftproduct", "flex-layout.col#rightproduct"]
  },
  "flex-layout.col#leftproduct": {
    "children": ["product-images"]
  },
  "flex-layout.col#rightproduct": {
    "props": {
      "preventVerticalStretch": true,
      "verticalAlign": "middle"
    },
    "children": ["vtex.store-components:product-name", "product-price", "buy-button"]
  },
  "product-price": {
    "props": {
      "showSavings": true,
      "showListPrice": true
    }
  }
}